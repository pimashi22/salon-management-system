# ===========================================
# GlowBridge Backend Environment Variables
# ===========================================

# Copy this file to .env and update the values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/glowbridge_db

# Alternative database connection (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glowbridge_db
DB_USER=your_username
DB_PASSWORD=your_password

# ===========================================
# Firebase Configuration
# ===========================================

# Your Firebase Project ID (required)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 1: Using Service Account JSON File (Recommended for Development)
# Place your Firebase service account JSON file in src/credentials.json
# Download from: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_SERVICE_ACCOUNT_PATH=./src/credentials.json

# Option 2: Using Environment Variables (Recommended for Production)
# Use these instead of the service account file for production deployments
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END PRIVATE KEY-----"

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# CORS Configuration (Optional)
# ===========================================
# Add allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# Logging Configuration (Optional)
# ===========================================
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log

# ===========================================
# Security Configuration (Optional)
# ===========================================
# JWT_SECRET=your-jwt-secret-key
# ENCRYPTION_KEY=your-encryption-key

# ===========================================
# Rate Limiting (Optional)
# ===========================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Email Configuration (Optional - for future use)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@glowbridge.com

# ===========================================
# File Upload Configuration (Optional)
# ===========================================
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=10485760

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
# SendGrid API Key for sending emails
SENDGRID_API_KEY=your_sendgrid_api_key_here

# From email address for outgoing emails
SENDGRID_FROM_EMAIL=noreply@glowbridge.com

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# ===========================================
# SMS Configuration (Notify.lk)
# ===========================================
# Notify.lk credentials for SMS OTP
NOTIFY_LK_USER_ID=your_notify_lk_user_id
NOTIFY_LK_API_KEY=your_notify_lk_api_key
NOTIFY_LK_SENDER_ID=GlowBridge

# Salt for OTP hashing (use a random string)
OTP_SALT=your_random_salt_string_here

# ===========================================
# Development/Debug Configuration
# ===========================================
# Enable detailed SQL logging in development
# DEBUG_SQL=true
# DEBUG_FIREBASE=true
